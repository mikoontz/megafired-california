@article{abatzoglou2021,
  title = {Increasing {{Synchronous Fire Danger}} in {{Forests}} of the {{Western United States}}},
  author = {Abatzoglou, John T. and Juang, Caroline S. and Williams, A. Park and Kolden, Crystal A. and Westerling, Anthony LeRoy},
